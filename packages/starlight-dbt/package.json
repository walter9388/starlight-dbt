{
  "name": "starlight-dbt",
  "version": "0.0.1",
  "description": "A Starlight plugin for dbt docs integration",
  "author": "Alex Waldron <walter93@hotmail.co.uk> (https://github.com/walter9388)",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "pnpm test:e2e:chrome",
    "test:e2e:chrome": "playwright install --with-deps chromium && playwright test --project chrome",
    "test:e2e:firefox": "playwright install --with-deps firefox && playwright test --project firefox"
  },
  "keywords": [
    "dbt",
    "dbt-docs",
    "docs",
    "documentation",
    "astro",
    "withastro",
    "astro-integration"
  ],
  "main": "./index.ts",
  "files": [
    "index.ts",
    "components",
    "utils"
  ],
  "peerDependencies": {
    "@astrojs/starlight": ">=0.30.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@vitest/coverage-v8": "4.0.16",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@yu-iskw/dbt-artifacts-parser": "0.1.4",
    "deepmerge": "^4.3.1"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://https://github.com/walter9388/starlight-dbt.git"
  },
  "publishConfig": {
    "provenance": true
  }
}